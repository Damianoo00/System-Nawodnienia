WindowManager:
    MainWindow:
    ProcessWindow:






<MainWindow>:
    name: "main"

    ip: ip
    time_I: time_I
    time_II: time_II
    time_III: time_III

    GridLayout:
        cols: 1
        
        GridLayout:
            cols: 2
        
            Label:
                text: "ip: "
            TextInput:
                id: ip
                multiline: False
            Label:
                text: "Czas podlewania I pola"
            TextInput:
                id: time_I
                multiline: False
            Label:
                text: "Czas podlewania II pola"
            TextInput:
                id: time_II
                multiline: False
            Label:
                text: "Czas podlewania III pola"
            TextInput:
                id: time_III
                multiline: False
        
        Button:
            text:"Wyślij"
            on_press: 
                app.root.current = "process" if time_I.text != '' and time_II.text != '' and time_III.text != '' and ip.text != '' else None
                root.manager.transition.direction = "left"
            on_press: root.btn()

<ProcessWindow>:
    name: "process"
    GridLayout:
        cols: 1
        

        Label:
            id: progress_label
            text: "100%"
        Button:
            text: "Wróć"
            on_press: 
                app.root.current = "main" if progress_label.text == "100%" else None
                root.manager.transition.direction = "right" 

    
